<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ifrn.tads.ddm.agendadecontatos.FormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNome"
            android:inputType="text"
            android:hint="@string/nome"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextFone"
            android:hint="@string/fone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/buttonInserir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inserir"
                android:onClick="" />

            <Button
                android:id="@+id/buttonEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editar"
                android:layout_toEndOf="@id/buttonInserir"
                android:layout_toRightOf="@id/buttonInserir"
                android:onClick="" />

            <Button
                android:id="@+id/buttonExcluir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/excluir"
                android:layout_toEndOf="@id/buttonEditar"
                android:layout_toRightOf="@id/buttonEditar"
                android:onClick="buttonClick" />

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
